@model Films.FilmGenre

@{
    ViewData["Title"] = "Додати жанр фільму";
}

<h1>Додати жанр фільму</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idgenres" class="control-label"></label>
                <select asp-for="Idgenres" class ="form-control" asp-items="ViewBag.Idgenres"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idfilm" class="control-label"></label>
                <select asp-for="Idfilm" class ="form-control" asp-items="ViewBag.Idfilm"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
