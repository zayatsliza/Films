@model Films.FilmGenre

@{
    ViewData["Title"] = "Видалити жанр фільму";
}

<h1>Видалити жанр фільму</h1>

<h3></h3>
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdfilmNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdfilmNavigation.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdgenresNavigation)
        </dt>
        <dd class = "col-sm-10">
