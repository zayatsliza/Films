@model Films.FilmGenre

@{
    ViewData["Title"] = "Редагувати";
}

<h1>Редагувати жанри фільму</h1>

<h4>FilmGenre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdfilmGenres" />
            <div class="form-group">
                <label asp-for="Idgenres" class="control-label"></label>
                <select asp-for="Idgenres" class="form-control" asp-items="ViewBag.Idgenres"></select>
                <span asp-validation-for="Idgenres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idfilm" class="control-label"></label>
                <select asp-for="Idfilm" class="form-control" asp-items="ViewBag.Idfilm"></select>
                <span asp-validation-for="Idfilm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти зміни" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
